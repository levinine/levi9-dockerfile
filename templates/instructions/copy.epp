<% unless empty($copy) { -%>
<% if $onbuild { -%>
<%= 'ONBUILD ' -%>
<% } -%>
COPY <% unless empty($copy['from']) { -%><%= "--from=${copy['from']} " -%><% } -%><% unless empty($copy['chown']) { -%><%= "--chown=${copy['chown']} " -%><% } -%><%= suffix(prefix(([$copy['source']] + [$copy['destination']]).flatten, '"'), '"') %>
<% } %>